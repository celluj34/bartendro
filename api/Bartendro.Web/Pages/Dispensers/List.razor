@page "/dispensers"

<h1>Dispensers</h1>

<p>This component demonstrates fetching data from a service.</p>

<button @onclick="Refresh" disabled="@_loading" class="btn btn-primary">Refresh Data</button>

<LoadingScreen Loading="@_loading">
    <table class="table">
        <thead>
            <tr>
                <th>Port</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var port in _ports)
            {
                <tr>
                    <td>@port</td>
                </tr>
            }
        </tbody>
    </table>
</LoadingScreen>