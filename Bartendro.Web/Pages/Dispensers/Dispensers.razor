@page "/dispensers"
@using Bartendro.Application.Orchestrators
@using Bartendro.Web.Shared
@inject IDispensersOrchestrator DispensersOrchestrator

<h1>Dispensers</h1>

<p>This component demonstrates fetching data from a service.</p>

@if(_loading)
{
    <Loading />
}
else
{
    <button @onclick="Refresh">Refresh Data</button>

    <table class="table">
        <thead>
            <tr>
                <th>Port</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var port in _ports)
            {
                <tr>
                    <td>@port</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    bool _loading = true;
    IEnumerable<string> _ports;

    protected override void OnInitialized()
    {
        _ports = DispensersOrchestrator.GetPorts();

        _loading = false;
    }

    void Refresh()
    {
        _loading = true;

        _ports = DispensersOrchestrator.GetPorts();

        _loading = false;
    }

}